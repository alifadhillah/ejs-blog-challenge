
<!-- form implementation to collect input -->
<%- include ("partials/header"); -%> 
        
        <h1>Compose</h1>
        <form class="mt-3" action="/compose" name="compose" method="post">
            <div class="mb-3">
                <label class="form-label font-weigh"><strong>Title</strong></label>
                <input class="form-control" type="text" name="newTitle">
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Post</strong></label>
                <textarea class="form-control" name="newBody" cols="30" rows="10"></textarea>
            </div>

            <button class="btn btn-primary" type="submit" name="publishButton" value="publish">Publish</button> 
        </form>

